// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// yarn prisma migrate dev

model Servico {
  id            String   @id @default(uuid())
  nomeServico   String   @default("")
  nome          String   @default("")
  foto          Json[]
  arrPortfolio  Json[]
  listaServicos String[]
  whatsapp      String   @default("")
  email         String   @default("")
  domicilio     Boolean  @default(false)
  endereco      String   @default("")
  bio           String   @default("")
  ativo         Boolean  @default(false)
  categoria     String   @default("")

  regiao   Regiao? @relation(fields: [regiaoID], references: [id])
  regiaoID String?

  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now())

  @@map("servicos")
}

model Loja {
  id    String @id @default(uuid())
  email String
  senha String

  logo Json[]

  ativo    Boolean @default(false)
  nome     String? @default("")
  whatsapp String? @default("")
  bio      String? @default("")

  endereco   String? @default("")
  bairro     String? @default("")
  referencia String? @default("")
  latlng     Json?

  entrega Boolean @default(false)

  produtos   Produto[]
  vendedores Vendedor[]

  regiao   Regiao? @relation(fields: [regiaoID], references: [id])
  regiaoID String?

  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now())

  @@map("lojas")
}

model Vendedor {
  id String @id @default(uuid())

  nome     String @default("")
  whatsapp String @default("")
  foto     Json[]

  loja   Loja   @relation(fields: [lojaID], references: [id])
  lojaID String

  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now())

  @@map("vendedores")
}

model Produto {
  id        String   @id @default(uuid())
  cod       String?  @default("")
  nome      String   @default("")
  descricao String   @default("")
  preco     String   @default("")
  oferta    String   @default("")
  tamanho   String[]
  cor       String[]
  imagens   Json[]

  loja   Loja   @relation(fields: [lojaID], references: [id])
  lojaID String

  categoria   Categoria @relation(fields: [categoriaID], references: [id])
  categoriaID String

  subcategoriaID String @default("")

  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now())

  @@map("produtos")
}

model Categoria {
  id           String         @id @default(uuid())
  nome         String
  
  subcategoria SubCategoria[]
  produto Produto[]

  @@map("categorias")
}

model SubCategoria {
  id   String @id @default(uuid())
  nome String

  categoria   Categoria @relation(fields: [categoriaID], references: [id])
  categoriaID String

  @@map("subcategorias")
}

model Regiao {
  id   String @id @default(uuid())
  nome String

  loja    Loja[]
  servico Servico[]

  @@map("regioes")
}

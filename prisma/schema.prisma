// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// yarn prisma migrate dev

model Servico {
  id            String   @id @default(uuid())
  nomeServico   String
  nome          String
  foto          Json[]
  arrPortfolio  Json[]
  listaServicos String[]
  whatsapp      String
  email         String
  domicilio     Boolean  @default(false)
  endereco      String
  bio           String
  ativo         Boolean  @default(false)
  categoria     String   @default("")

  regiao   Regiao? @relation(fields: [regiaoID], references: [id])
  regiaoID String?

  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now())

  @@map("servicos")
}

model Loja {
  id    String @id @default(uuid())
  email String
  senha String

  logo Json[]

  ativo    Boolean @default(false)
  nome     String?
  whatsapp String?
  bio      String?

  endereco   String?
  bairro     String?
  referencia String?
  latlng     Json?

  entrega Boolean @default(false)

  produtos   Produto[]
  vendedores Vendedor[]

  regiao   Regiao? @relation(fields: [regiaoID], references: [id])
  regiaoID String?

  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now())

  @@map("lojas")
}

model Vendedor {
  id String @id @default(uuid())

  nome     String
  whatsapp String
  foto     Json[]

  loja   Loja   @relation(fields: [lojaID], references: [id])
  lojaID String

  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now())

  @@map("vendedores")
}

model Produto {
  id        String   @id @default(uuid())
  nome      String
  descricao String
  preco     String
  oferta    String   @default("")
  tamanho   String[]
  cor       String[]
  imagens   Json[]

  loja   Loja   @relation(fields: [lojaID], references: [id])
  lojaID String

  categoria   Categoria @relation(fields: [categoriaID], references: [id])
  categoriaID String

  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now())

  @@map("produtos")
}

model Categoria {
  id   String @id @default(uuid())
  nome String

  produto Produto[]

  @@map("categorias")
}

model Regiao {
  id   String @id @default(uuid())
  nome String

  loja    Loja[]
  servico Servico[]

  @@map("regioes")
}
